@model IEnumerable<PetHealthCenter.Domain.Entities.Client>

<h1>Clients</h1>

<a class="btn btn-primary" asp-action="Create">Add</a>
<table class="table table-bordered">
    <thead>
        <tr>
        <th>Id</th>
        <th>Name</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        </tr>
.    </thead>
    @if(!Model.Any())
    {
        <tr>
            <td colspan="6">No Records found</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit"> Edit</a>
                    <a class="btn btn-danger" asp-action="Delete"> Delete</a>
                </td>
            </tr>
        }
    }
</table>