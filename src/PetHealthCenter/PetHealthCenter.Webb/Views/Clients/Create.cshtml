@model PetHealthCenter.Domain.Entities.Client

<h1>Add New Person</h1>



    <form asp-action="Create">
        <div class="row">
            <div class=" form-grow">
                <label aps-for="Name" class="form-label col-md-2"> Name</label>
                <div class="col-md-2">
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class=" form-grow">
                <label aps-for="LastName" class="form-label col-md-2"> LastName</label>
                <div class="col-md-2">
                    <input class="form-control" asp-for="LastName" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" form-grow">
                <label aps-for="Address" class="form-label col-md-2"> Address</label>
                <div class="col-md-2">
                    <textarea asp-for="Address" cols="3" class="form-control">
                    </textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" form-grow">
                <label aps-for="Phone" class="form-label col-md-2"> Phone</label>
                <div class="col-md-2">
                    <input class="form-control" asp-for="Phone" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" form-grow">
                <label aps-for="Email" class="form-label col-md-2"> Email</label>
                <div class="col-md-2">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
        </div>

        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-secondary"> Cancel</a>
    </form>


